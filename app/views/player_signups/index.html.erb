<p id="notice"><%= notice %></p>

<h1>Player Signups</h1>

<table>
  <thead>
    <tr>
      <th>Listing</th>
      <th>Player</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @player_signups.each do |player_signup| %>
      <tr>
        <td><%= player_signup.listing_id %></td>
        <td><%= player_signup.player_id %></td>
        <td><%= link_to 'Show', player_signup %></td>
        <td><%= link_to 'Edit', edit_player_signup_path(player_signup) %></td>
        <td><%= link_to 'Destroy', player_signup, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Player Signup', new_player_signup_path %>
